generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  address   String
  phone     String?
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Products  Product[] @relation("Owner")
  Borrowed  Product[] @relation("RentedTo")
  Bought    Product[] @relation("SoldTo")
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       Float
  rent        Float
  categories  Category[]
  ownerId     Int
  rentedToId  Int?
  rentedAt    DateTime?
  rentEndDate DateTime?
  soldToId    Int?
  soldAt      DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Owner       User       @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  RentedTo    User?      @relation("RentedTo", fields: [rentedToId], references: [id])
  SoldTo      User?      @relation("SoldTo", fields: [soldToId], references: [id])
}

enum Category {
  ELECTRONICS
  FURNITURE
  HOME_APPLIANCES
  SPORTING_GOODS
  OUTDOOR
  TOYS
}
