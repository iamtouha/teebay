{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "interactive": true,
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:init": {
      "cache": false
    },
    "db:remove": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["validator#build"],
      "persistent": true,
      "cache": false
    }
  }
}
